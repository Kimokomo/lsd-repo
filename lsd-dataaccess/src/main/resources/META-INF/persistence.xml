<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.2">


    <persistence-unit name="myJpaUnit">


        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>root.entity.LsdEntity</class>


        <properties>
            <!-- JDBC Database connection settings -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/lsd"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="Karim.karim22"/>

            <!-- Specify dialect for MySQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>

            <!-- Automatically create the schema -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Show SQL statements -->
            <property name="hibernate.show_sql" value="true"/>

            <!-- Format SQL statements -->
            <property name="hibernate.format_sql" value="true"/>
        </properties>


    </persistence-unit>
</persistence>
